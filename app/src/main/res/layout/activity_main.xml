<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.xuchengpu.shoppingmall.app.MainActivity">

    <FrameLayout
        android:id="@+id/fl_main"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"></FrameLayout>

    <RadioGroup

        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/home_bottom_parent_bg"
        android:gravity="center"
        android:paddingTop="18dp"
        android:paddingBottom="5dp"
        android:orientation="horizontal"
       >

        <RadioButton

            android:id="@+id/rb_main_home"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_home_selector"
            android:text="主页" />

        <RadioButton

            android:id="@+id/rb_main_type"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_type_selector"
            android:text="分类" />

        <RadioButton

            android:id="@+id/rb_main_community"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_community_selector"
            android:text="发现" />

        <RadioButton

            android:id="@+id/rb_main_shoppingcart"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_shoppingcart_selector"
            android:text="购物车" />

        <RadioButton

            android:id="@+id/rb_main_user"
            style="@style/MainButtonStyle"
            android:drawableTop="@drawable/main_user_selector"
            android:text="个人中心" />
    </RadioGroup>


</LinearLayout>
